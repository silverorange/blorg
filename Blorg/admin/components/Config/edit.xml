<?xml version="1.0" standalone="no"?>
<!DOCTYPE swatml SYSTEM "http://swat.silverorange.com/swatml1.dtd">
<swatml>
	<widget class="SwatMessageDisplay" id="message_display" />
	<widget class="SwatFrame" id="edit_frame">
		<property name="title" translatable="yes">Site Settings</property>
		<widget class="SwatForm" id="edit_form">
			<widget class="SwatFormField">
				<property name="title" translatable="yes">Site Title</property>
				<widget class="SwatEntry" id="site_title">
					<property name="required" type="boolean">true</property>
					<property name="maxlength" type="integer">255</property>
				</widget>
			</widget>
			<widget class="SwatFormField" id="image_container">
				<property name="title" translatable="yes">Header Image</property>
				<widget class="BlorgHeaderImageDisplay" id="image_preview" />
			</widget>
			<widget class="SwatDisclosure" id="change_image">
				<property name="title" translatable="yes">Replace Header Image</property>
				<property name="open" type="boolean">false</property>
				<widget class="SwatFormField">
					<widget class="SwatFileEntry" id="header_image">
						<property name="accept_mime_types[]">image/jpeg</property>
						<property name="accept_mime_types[]">image/png</property>
						<property name="accept_mime_types[]">image/gif</property>
					</widget>
				</widget>
			</widget>
			<widget class="SwatFormField">
				<property name="title" translatable="yes">Meta Description</property>
				<widget class="SwatTextarea" id="site_meta_description">
					<property name="rows" type="integer">5</property>
				</widget>
			</widget>
			<widget class="SwatFormField">
				<property name="title" translatable="yes">Default Reply Status</property>
				<widget class="SwatFlydown" id="blorg_default_comment_status" />
			</widget>
			<widget class="SwatFormField">
				<property name="title" translatable="yes">Time Zone</property>
				<widget class="SwatTimeZoneEntry" id="date_time_zone" />
			</widget>
			<widget class="SwatFormField">
				<property name="title" translatable="yes">Google Analytics Account</property>
				<widget class="SwatEntry" id="analytics_google_account">
					<property name="maxlength" type="integer">255</property>
				</widget>
			</widget>
			<widget class="SwatFormField">
				<property name="title" translatable="yes">Akismet Key</property>
				<widget class="SwatEntry" id="blorg_akismet_key">
					<property name="maxlength" type="integer">255</property>
				</widget>
			</widget>
			<widget class="SwatFieldset">
				<property name="title" translatable="yes">Ad Placements</property>
				<widget class="SwatContentBlock">
					<property name="content" translatable="yes">Include the  markup for embedding the ad in the selected position.</property>
				</widget>
				<widget class="SwatFormField">
					<property name="title" translatable="yes">Top of Page</property>
					<widget class="SwatTextarea" id="blorg_ad_top">
						<property name="maxlength" type="integer">1024</property>
						<property name="rows" type="integer">5</property>
					</widget>
				</widget>
				<widget class="SwatFormField">
					<property name="title" translatable="yes">Bottom of Page</property>
					<widget class="SwatTextarea" id="blorg_ad_bottom">
						<property name="maxlength" type="integer">1024</property>
						<property name="rows" type="integer">5</property>
					</widget>
				</widget>
				<widget class="SwatFormField">
					<property name="title" translatable="yes">After Post Bodytext</property>
					<widget class="SwatTextarea" id="blorg_ad_post_content">
						<property name="maxlength" type="integer">1024</property>
						<property name="rows" type="integer">5</property>
					</widget>
				</widget>
				<widget class="SwatFormField">
					<property name="title" translatable="yes">Before Post Comments</property>
					<widget class="SwatTextarea" id="blorg_ad_post_comments">
						<property name="maxlength" type="integer">1024</property>
						<property name="rows" type="integer">5</property>
					</widget>
				</widget>
				<widget class="SwatFormField">
					<property name="title" translatable="yes">Only display ads to visitors who have arrived via another website</property>
					<widget class="SwatCheckbox" id="blorg_ad_referers_only" />
				</widget>
			</widget>
			<widget class="SwatFooterFormField">
				<widget class="SwatButton" id="submit_button" />
			</widget>
		</widget>
	</widget>
</swatml>
